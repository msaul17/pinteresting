<h2 class="white-text">Sign in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="white-text"><%= f.label :email %><br />
  <%= f.email_field :email, class: "black-text", autofocus: true %></div>

  <div class="white-text"><%= f.label :password %><br />
    <%= f.password_field :password, class: "black-text", autocomplete: "off" %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="white-text"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in" %></div>
<% end %>

<%= render "devise/shared/links" %>
